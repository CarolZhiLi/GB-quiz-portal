rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Quiz Questions Collection - Allow read and write for all authenticated users
    // Since authentication was removed, we'll allow public access
    // WARNING: This allows anyone to read/write. For production, you should add authentication.
    match /quizQuestions/{questionId} {
      // Allow read for everyone
      allow read: if true;
      
      // Allow write (create, update, delete) for everyone
      // In production, you should restrict this to authenticated admin users
      allow create, update, delete: if true;
    }
  }
}
