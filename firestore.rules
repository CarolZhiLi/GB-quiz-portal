rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn() && (request.auth.token.admin == true);
    }

    // Live Quiz Questions - public read, admin-only writes
    match /quizQuestions/{questionId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }

    // Staging batches metadata
    match /stagingBatches/{batchId} {
      // Anyone can read batch metadata (adjust to isAdmin() if you want private)
      allow read: if true;

      // Allow batch creation without auth for development convenience
      // For production, change to: if isSignedIn();
      allow create: if true;

      // Allow updates/deletes by admin OR by the creator.
      // Also allow unauthenticated updates if the creator is anonymous (createdByUid == null).
      allow update, delete: if isAdmin() ||
        (isSignedIn() && request.auth.uid == resource.data.createdByUid) ||
        (!isSignedIn() && resource.data.createdByUid == null);
    }

    // Staging questions under a batch
    match /stagingBatches/{batchId}/questions/{qid} {
      // Anyone can read staged question docs (adjust as needed)
      allow read: if true;

      // Writes allowed for admin or the creator of the parent batch.
      allow create, update, delete: if isAdmin() ||
        (isSignedIn() && request.auth.uid == get(/databases/$(database)/documents/stagingBatches/$(batchId)).data.createdByUid) ||
        (!isSignedIn() && get(/databases/$(database)/documents/stagingBatches/$(batchId)).data.createdByUid == null);
    }
  }
}
